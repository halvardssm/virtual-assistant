{
  "name": "virtual-assistant",
  "packageManager": "yarn@3.2.3",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "yarn clean && tsc && vite build",
    "preview": "vite preview",
    "prepack": "yarn build",
    "clean": "rm -rf dist",
    "format:fix": "prettier --write \"lib/**/*.ts\"",
    "format:check": "prettier --check \"lib/**/*.ts\"",
    "lint:fix": "eslint --fix",
    "lint:check": "echo 'checking eslint' && eslint && echo 'eslint complete'",
    "tsc:check": "'checking tsc' && tsc --noEmit && echo 'tsc complete'",
    "test": "jest"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.3",
    "@jest/types": "^29.0.3",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "eslint": "^8.23.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.79.0",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-dts": "^1.5.0"
  }
}
